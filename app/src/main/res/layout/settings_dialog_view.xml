<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player name"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/player_name"
        android:ems="10"
        android:id="@+id/player_name_edittext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Data collecting"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="5dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/archive_drawings"
        android:id="@+id/archive_drawings_checkbox"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/collect_user_estimates"
        android:id="@+id/collect_user_estimates_checkbox"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Credits"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Design: Atte Keinänen, Jooel Friman, Perttu Hämäläinen\nImplementation: Atte Keinänen, Jooel Friman"
        android:id="@+id/textView6"
        android:focusableInTouchMode="true"
        android:textSize="16dp"
        android:textColor="#000000"
        android:typeface="sans"
        android:layout_weight="0.23" />
</LinearLayout>